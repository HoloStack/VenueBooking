<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/universal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/venueBooking.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Floating Navigation -->
    <div class="floating-nav">
        <div class="nav-container">
            <a href="/" class="nav-brand">
                <i class="fas fa-calendar-check"></i>
                <span>EventEase</span>
            </a>
            <div class="nav-links">
                <a href="/" class="nav-link" title="Dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                </a>
                <a href="/Venues" class="nav-link" title="Venues">
                    <i class="fas fa-building"></i>
                </a>
                <a href="/Events" class="nav-link" title="Events">
                    <i class="fas fa-calendar-alt"></i>
                </a>
                <a href="/Bookings" class="nav-link" title="Bookings">
                    <i class="fas fa-ticket-alt"></i>
                </a>
            </div>
        </div>
    </div>
        <main role="main" class="pb-3 main-content">
            @RenderBody()
        </main>

    <footer class="modern-footer">
        <div class="container text-center">
            <p>&copy; 2025 EventEase - Your Complete Venue Management Solution</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
