@model venueBooking.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventId" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="EventName" class="form-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EventDate" class="form-label"></label>
        <input asp-for="EventDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VenueId" class="form-label">Venue</label>
        <select asp-for="VenueId" class="form-select" asp-items="ViewBag.Venues"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EventTypeId" class="form-label">Event Type</label>
        <select asp-for="EventTypeId" class="form-select" asp-items="ViewBag.EventTypes"></select>
        <span asp-validation-for="EventTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
