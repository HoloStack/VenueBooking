@model venueBooking.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.EventName</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("F")</dd>
        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue.VenueName</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.EventType.Name</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>