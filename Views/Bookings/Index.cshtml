@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Bookings Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/bookings.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<!-- Header Section -->
<div class="bookings-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-calendar-check me-3"></i>Bookings Management</h1>
                <p class="mb-0">Manage and track all event bookings</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Create" class="create-booking-btn">
                    <i class="fas fa-plus me-2"></i>New Booking
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card text-center">
                <h3 class="stats-number">@Model.Count()</h3>
                <p class="stats-label">Total Bookings</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card text-center">
                <h3 class="stats-number">@Model.Select(b => b.VenueId).Distinct().Count()</h3>
                <p class="stats-label">Venues Booked</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card text-center">
                <h3 class="stats-number">@Model.Select(b => b.EventId).Distinct().Count()</h3>
                <p class="stats-label">Events Booked</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card text-center">
                <h3 class="stats-number">@Model.Select(b => b.CustomerName).Distinct().Count()</h3>
                <p class="stats-label">Unique Customers</p>
            </div>
        </div>
    </div>

    <!-- Filter Panel -->
    <div class="filter-panel">
        <h5><i class="fas fa-filter me-2"></i>Filter Bookings</h5>
        <form method="get" asp-action="Index" class="filter-form">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="venueId" class="form-label">Venue</label>
                    <select name="venueId" id="venueId" class="form-select" asp-items="ViewBag.Venues">
                        <option value="">All Venues</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="eventId" class="form-label">Event</label>
                    <select name="eventId" id="eventId" class="form-select" asp-items="ViewBag.Events">
                        <option value="">All Events</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" name="fromDate" id="fromDate" class="form-control" value="@ViewBag.FromDate" />
                </div>
                <div class="col-md-2">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" name="toDate" id="toDate" class="form-control" value="@ViewBag.ToDate" />
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-filter">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-clear">
                        <i class="fas fa-times me-2"></i>Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Bookings Table -->
    @if (Model.Any())
    {
        <div class="bookings-table">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="fas fa-user me-2"></i>Customer</th>
                        <th><i class="fas fa-calendar-alt me-2"></i>Event</th>
                        <th><i class="fas fa-map-marker-alt me-2"></i>Venue</th>
                        <th><i class="fas fa-calendar me-2"></i>Date</th>
                        <th><i class="fas fa-cog me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>
                            <div class="customer-name">
                                <i class="fas fa-user-circle me-2 text-muted"></i>
                                @booking.CustomerName
                            </div>
                        </td>
                        <td>
                            <div class="event-name">
                                <i class="fas fa-star me-2"></i>
                                @booking.Event?.EventName
                            </div>
                        </td>
                        <td>
                            <div class="venue-name">
                                <i class="fas fa-building me-2"></i>
                                @booking.Venue?.VenueName
                            </div>
                        </td>
                        <td>
                            <span class="booking-date">
                                <i class="fas fa-calendar-day me-2"></i>
                                @booking.BookingDate.ToString("MMM dd, yyyy")
                            </span>
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-info" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-sm btn-warning" title="Edit Booking">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-sm btn-danger" title="Delete Booking">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bookings-table">
            <div class="no-bookings">
                <i class="fas fa-calendar-times"></i>
                <h4>No Bookings Found</h4>
                <p>No bookings match your current filter criteria.</p>
                <a asp-action="Create" class="create-booking-btn">
                    <i class="fas fa-plus me-2"></i>Create First Booking
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when filters change
            $('#venueId, #eventId').on('change', function() {
                if ($(this).val() !== '') {
                    $('.filter-form').submit();
                }
            });
            
            // Add loading animation to filter button
            $('.filter-form').on('submit', function() {
                var submitBtn = $('.btn-filter');
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Filtering...');
                submitBtn.prop('disabled', true);
            });
            
            // Animate stats cards on page load
            $('.stats-number').each(function() {
                var $this = $(this);
                var countTo = parseInt($this.text());
                
                $({ countNum: 0 }).animate({
                    countNum: countTo
                }, {
                    duration: 1000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function() {
                        $this.text(countTo);
                    }
                });
            });
            
            // Add hover effects to table rows
            $('.bookings-table tbody tr').hover(
                function() {
                    $(this).css('box-shadow', '0 4px 8px rgba(0,0,0,0.1)');
                },
                function() {
                    $(this).css('box-shadow', 'none');
                }
            );
            
            // Enhanced tooltips
            $('[title]').tooltip({
                placement: 'top',
                trigger: 'hover'
            });
        });
    </script>
}
