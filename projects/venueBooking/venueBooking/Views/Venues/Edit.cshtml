@model Venue
@{
    ViewData["Title"] = "Edit Venue";
}
<h1>Edit Venue</h1>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="VenueId" />
    <div class="form-group">
        <label asp-for="VenueName"></label>
        <input asp-for="VenueName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Current Image</label><br />
        <img src="@Model.ImageUrl" width="150" />
    </div>
    <div class="form-group">
        <label>Change Image</label>
        <input type="file" name="image" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
</form>