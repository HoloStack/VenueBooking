@model Venue
@{
    ViewData["Title"] = "Venue Details";
}
<h1>Details</h1>
<div>
    <h4>@Model.VenueName</h4>
    <dl class="row">
        <dt class="col-sm-2">Location</dt><dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Capacity</dt><dd class="col-sm-10">@Model.Capacity</dd>
        <dt class="col-sm-2">Image</dt><dd class="col-sm-10"><img src="@Model.ImageUrl" width="200" /></dd>
    </dl>
</div>
<p><a asp-action="Edit" asp-route-id="@Model.VenueId">Edit</a> | <a asp-action="Index">Back to List</a></p>
