@model IEnumerable<venueBooking.Models.Event>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label class="form-label">Event Type</label>
        <select name="eventTypeId" class="form-select" asp-items="ViewBag.EventTypesFilter">
            <option value="">All Types</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">From</label>
        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">To</label>
        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-secondary w-100">Filter</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date &amp; Time</th>
            <th>Venue</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model) {
        <tr>
            <td>@e.EventName</td>
            <td>@e.EventDate.ToString("g")</td>
            <td>@e.Venue.VenueName</td>
            <td>@e.EventType.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@e.EventId">Edit</a> |
                <a asp-action="Details" asp-route-id="@e.EventId">Details</a> |
                <a asp-action="Delete" asp-route-id="@e.EventId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>