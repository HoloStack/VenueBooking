@model venueBooking.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

@section Styles {
    <link rel="stylesheet" href="~/css/universal.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="container">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-calendar-plus me-3"></i>Create New Event</h1>
            <p>Schedule a new event with complete details and venue configuration</p>
        </div>
        
        <div class="form-body">
            @if (!string.IsNullOrEmpty(ViewBag.PreSelectedVenue))
            {
                <div class="alert alert-info mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Venue Pre-selected:</strong> @ViewBag.PreSelectedVenue
                </div>
            }
            
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-info-circle me-2"></i>Event Details</h5>
                    
                    <div class="mb-3">
                        <label asp-for="EventName" class="form-label">
                            <i class="fas fa-star"></i>
                            Event Name
                        </label>
                        <input asp-for="EventName" class="form-control" placeholder="Enter a descriptive event name" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-file-text"></i>
                            Event Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the event, agenda, target audience, and other important details..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="EventDate" class="form-label">
                            <i class="fas fa-calendar-day"></i>
                            Event Date & Time
                        </label>
                        <input asp-for="EventDate" type="datetime-local" step="60" class="form-control" />
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Select the exact date and time when the event will take place
                        </div>
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-map-marker-alt me-2"></i>Venue & Type Configuration</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VenueId" class="form-label">
                                <i class="fas fa-building"></i>
                                Venue Location
                            </label>
                            <select asp-for="VenueId" class="form-select" asp-items="ViewBag.Venues">
                                <option value="">-- Select Venue --</option>
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="EventTypeId" class="form-label">
                                <i class="fas fa-tag"></i>
                                Event Type
                            </label>
                            <select asp-for="EventTypeId" class="form-select" asp-items="ViewBag.EventTypes">
                                <option value="">-- Select Type --</option>
                            </select>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Event types depend on the selected venue's capabilities
                            </div>
                            <span asp-validation-for="EventTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h5 class="section-title"><i class="fas fa-image me-2"></i>Event Media</h5>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-camera"></i>
                            Event Image
                        </label>
                        <input type="file" name="image" class="form-control" accept="image/*" />
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Upload a promotional image for your event (JPG, PNG, GIF supported)
                        </div>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-form-primary">
                        <i class="fas fa-calendar-check me-2"></i>Create Event
                    </button>
                    <a asp-action="Index" class="btn-form-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function() {
            $('#EventTypeId').prop('disabled', true);
            
            $('#VenueId').on('change', function() {
                var venueId = $(this).val();
                var eventTypeSelect = $('#EventTypeId');
                
                eventTypeSelect.empty();
                eventTypeSelect.append('<option value="">-- Select Type --</option>');
                
                if (venueId) {
                    $.get('/Events/GetEventTypesForVenue', { venueId: venueId })
                        .done(function(data) {
                            eventTypeSelect.prop('disabled', false);
                            if (data && data.length > 0) {
                                $.each(data, function(i, item) {
                                    eventTypeSelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                                });
                            }
                        })
                        .fail(function() {
                            eventTypeSelect.append('<option value="">Error loading types</option>');
                        });
                } else {
                    eventTypeSelect.prop('disabled', true);
                }
            });
        });
    </script>
}
