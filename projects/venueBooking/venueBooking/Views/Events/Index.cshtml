@model IEnumerable<Event>
@{
    ViewData["Title"] = "Events";
}
<h1>Events</h1>
<p><a asp-action="Create">Create New Event</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Venue Image</th>
            <th>Name</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var e in Model) {
        <tr>
            <td><img src="@e.Venue?.ImageUrl" width="100" /></td>
            <td>@e.EventName</td>
            <td>@e.EventDate.ToString("yyyy-MM-dd")</td>
            <td>@e.Venue?.VenueName</td>
            <td>@e.EventType?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@e.EventId">Details</a> |
                <a asp-action="Edit" asp-route-id="@e.EventId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@e.EventId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
