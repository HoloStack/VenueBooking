@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Bookings";
}
<h1>Bookings</h1>
<p><a asp-action="Create" class="btn btn-primary">Create New Booking</a></p>
<table class="table">
    <thead>
        <tr><th>Date</th><th>Event</th><th>Venue</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.BookingDate.ToString("yyyy-MM-dd")</td>
            <td>@b.Event?.EventName</td>
            <td>@b.Venue?.VenueName</td>
            <td>
                <a asp-action="Details" asp-route-id="@b.BookingId">Details</a> |
                <a asp-action="Edit" asp-route-id="@b.BookingId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@b.BookingId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>