@model venueBooking.Models.Venue

@{
    ViewData["Title"] = "Edit Venue";
}

<h1>Edit Venue</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VenueId" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="VenueName" class="form-label">Name</label>
        <input asp-for="VenueName" class="form-control" />
        <span asp-validation-for="VenueName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label">Capacity</label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Supported Event Types</label>
        <small class="form-text text-muted">Select all event types this venue can support</small>
        <div class="row">
            @foreach (var et in (MultiSelectList)ViewBag.EventTypes)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="form-check">
                        @if (((MultiSelectList)ViewBag.EventTypes).SelectedValues?.Cast<string>().Contains(et.Value) == true)
                        {
                            <input class="form-check-input" type="checkbox" name="EventTypeIds" value="@et.Value" id="eventType_@et.Value" checked />
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" name="EventTypeIds" value="@et.Value" id="eventType_@et.Value" />
                        }
                        <label class="form-check-label" for="eventType_@et.Value">
                            @et.Text
                        </label>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" width="150" alt="@Model.VenueName" />
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Change Image</label>
        <input type="file" name="image" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}