@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron mt-4 p-5 bg-light rounded shadow-sm">
    <h1 class="display-4">Welcome to EventEase</h1>
    <p class="lead">
        Your one-stop portal for managing venues, creating events, and handling bookings.
    </p>
    <hr class="my-4" />
    <p>Use the navigation below to explore:</p>
    <div class="d-flex gap-3 mt-3">
        <a class="btn btn-primary btn-lg" asp-controller="Venues" asp-action="Index">Venues</a>
        <a class="btn btn-success btn-lg" asp-controller="Events" asp-action="Index">Events</a>
        <a class="btn btn-info btn-lg" asp-controller="Bookings" asp-action="Index">Bookings</a>
    </div>
</div>