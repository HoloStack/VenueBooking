@model Booking
@{
    ViewData["Title"] = "Create Booking";
}
<h1>Create Booking</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventId"></label>
        <select asp-for="EventId" asp-items="ViewBag.Events" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }