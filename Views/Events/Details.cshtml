@model venueBooking.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<dl class="row">
    <dt class="col-sm-3">Name</dt><dd class="col-sm-9">@Model.EventName</dd>
    <dt class="col-sm-3">Date</dt><dd class="col-sm-9">@Model.EventDate.ToString("g")</dd>
    <dt class="col-sm-3">Venue</dt><dd class="col-sm-9">@Model.Venue.VenueName</dd>
    <dt class="col-sm-3">Type</dt><dd class="col-sm-9">@Model.EventType.Name</dd>
</dl>
<div>
    @if (!string.IsNullOrEmpty(Model.Venue.ImageUrl))
    {
        <img src="@Model.Venue.ImageUrl" class="img-fluid" alt="@Model.Venue.VenueName" />
    }
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</p>
